#!/usr/bin/env node

"use strict";


/**
 * Watch project to concat.
 * @type {exports}
 */

var h = require('../_helper'),
    async = h.async,

    tasks = h.tasks,
    configs = require('../configs');

process.chdir(h.basedir);


configs.concatConfig.forEach(function (config) {
    console.log('Watch files:', config.src);
    h.watchAll(config.src, function (event, filename) {
        new tasks.ConcatTask(config).run(function () {

        });
    });
});
