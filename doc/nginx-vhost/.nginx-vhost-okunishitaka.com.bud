"use strict";

var u = require('apeman-util'),
    path = u.core.path,
    server = require('../../server.json');

var basedir = path.resolve(__dirname, '../../');

module.exports = {
    force: true,
    mode: '444',
    data: {
        port: server.port,
        domain: server.domain,
        basicAuth: [
            {location: '^/admin', root: "public/html"},
            {location: '/admin.html', root: "public/html"}
        ],
        get errorPages() {
            var data = {
                '502 503': 'error-something-wrong.html'
            };
            return Object.keys(data).map(function (key) {
                return {
                    statusCode: key,
                    filename: '/' + data[key],
                    root: path.resolve(basedir, 'public/html/error'),
                    internal: false
                }
            });
        }
    }
}
