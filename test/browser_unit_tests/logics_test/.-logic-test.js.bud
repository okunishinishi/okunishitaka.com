/**
 * Bud file for logic test.
 */

"use strict";

var u = require('apeman-util'),
    fs = u.core.fs,
    filtering = u.filtering,
    string = u.string,
    mapping = u.mapping,
    path = u.core.path;

var basedir = path.resolve(__dirname, '../../../'),
    srcDir = path.resolve(basedir, 'public/javascripts/ok/logics'),
    destDir = __dirname;


module.exports = fs.readdirSync(srcDir)
    .filter(filtering.patternAcceptFilter(/-logic\.js$/))
    .map(mapping.pathResolveMap(srcDir))
    .map(function (src) {
        var name = path.basename(src, path.extname(src)).replace(/\-logic$/, '');
        return {
            force: false,
            mode: '644',
            path: path.resolve(destDir, name + '-logic-test.js'),
            data: {
                name: string.camelString(name),
                Name: string.pascalString(name)
            }
        }
    });
